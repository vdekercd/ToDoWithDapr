{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "defaultValue": "North Europe",
            "type": "String"
        },
        "environment_name": {
            "defaultValue": "Production",
            "type": "String"
        },
        "storage_account_name": {
            "defaultValue": "todowithdaprstorage",
            "type": "String"
        },
        "storage_account_key": {
            "defaultValue": "0/wG6EFdrgdgAwsEzxgBzswxHcEt8fugFU1+KoAV/uVpjiBzRDt4L/eLnIZx9HWDXOqiYpiToyh5KJz3Dx4c5A==",
            "type": "String"
        },
        "storage_container_name": {
            "defaultValue": "todowithdaprcontainer",
            "type": "String"
        },
        "registry_key": {
            "defaultValue": "fv5ZyldBw2KCWmpo=lJAr4z=3LYuArF2",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "todowithdapr-api",
            "type": "Microsoft.Web/containerApps",
            "apiVersion": "2021-03-01",
            "kind": "containerapp",
            "location": "[parameters('location')]",
            "properties": {
                "kubeEnvironmentId": "[resourceId('Microsoft.Web/kubeEnvironments', parameters('environment_name'))]",
                "configuration": {
                    "ingress": {
                        "external": true,
                        "targetPort": 3000
                    },
                    "secrets": [
                        {
                            "name": "storage-key",
                            "value": "[parameters('storage_account_key')]"
                        },
                        {
                            "name": "registry-key",
                            "value": "[parameters('registry_key')]"
                        }
                    ],
                    "registries": [{
                        "server": "ysoerozoniryx.azurecr.io",
                        "username": "YsoerozOniryx",
                        "passwordSecretRef": "registry-key"
                    }]
                },                
                "template": {
                    "containers": [
                        {
                            "image": "ysoerozoniryx.azurecr.io/todowithdaprapi",
                            "name": "todowithdaprapi",
                            "resources": {
                                "cpu": 0.5,
                                "memory": "1Gi"
                            }
                        }
                    ],
                    "scale": {
                        "minReplicas": 1,
                        "maxReplicas": 1
                    },
                    "dapr": {
                        "enabled": true,
                        "appPort": 3000,
                        "appId": "todowithdapr-api",
                        "components": [
                            {
                                "name": "statestore",
                                "type": "state.azure.blobstorage",
                                "version": "v1",
                                "metadata": [
                                    {
                                        "name": "accountName",
                                        "value": "[parameters('storage_account_name')]"
                                    },
                                    {
                                        "name": "accountKey",
                                        "secretRef": "storage-key"
                                    },
                                    {
                                        "name": "containerName",
                                        "value": "[parameters('storage_container_name')]"
                                    }
                                ]
                            }
                        ]
                    }
                }
            }
        }
    ]
}